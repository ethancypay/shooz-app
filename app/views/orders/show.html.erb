<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="border px-5">
        <div class="py-3">
          <h2>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h2>
          <p>Thank you so much for your purchase.</p>
          <p>Estimated delivery in <strong>2 business days</strong></p>
          <%= link_to "Return to shopping", root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div>
      <div class="col-4">
        <%= render "shared/checkoutitem", listing: @order.listing %>
      </div>
    </div>
  </div>
</div>
