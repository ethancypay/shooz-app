<div class="container">
  <div class="listing_images">
    <img class="" src="https://source.unsplash.com/300x300/?sneaker" alt="sneaker image">
  </div>
  <div id="listing_content">
    <h3>Model: <%= @listing.sneaker_model_name %></h3>
    <h3>Brand: <%= @listing.brand %></h3>
    <h3>$ <%= @listing.price %></h3>
    <h3>Condition: <%= @listing.condition %></h3>
    
    <div id="content-low">
      <div id="size-and-gender-table">
        <table class="table table-dark table-sm">
          <thead>
            <tr>
              <th scope="col">Size</th>
              <th scope="col">Gender</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @listing.size %></td>
              <td><%= @listing.gender %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to "Buy", checkouts_new_path %>
      </div>
    </div>
  </div>
</div>
