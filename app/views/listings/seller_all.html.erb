<div class="container">
  <% if @seller == current_user %>
    <% if @query %>
      <%= render 'query', page: 'Listed' %>
    <% end %>

    <div class="d-flex justify-content-between pt-4">
      <div>
        <%= link_to 'Listed', seller_path(current_user), class: 'tab-active mr-3' %>

        <%= link_to 'To be shipped', seller_ship_path(current_user) %>
      </div>

      <%= link_to new_listing_path, class: "btn btn-primary"  do %>
        <i class="fas fa-plus pr-2"></i>Create listing
      <% end %>
    </div>

  <% else %>
    <h1 class="pt-4"><%= @seller.email %> listings</h1>
  <% end %>

  <% if @seller == current_user && @listings.empty? %>
    <p class="py-4"><em>You have 0 listings found</em></p>
  <% elsif @listings.empty? %>
    <p class="py-4"><em>0 listings found</em></p>
  <% else %>
    <div class="row">
      <%= render @listings %>
    </div>
  <% end %>
</div>
