<div class="container">
  <% if @query %>
    <%= render 'query', page: 'To-be-shipped' %>
  <% end %>

  <div class="d-flex justify-content-between pt-4">

    <div>
      <%= link_to 'Listed', seller_path(current_user), class: 'mr-3' %>
      <%= link_to 'To be shipped', seller_ship_path(current_user), class: 'tab-active' %>
    </div>

    <%= link_to new_listing_path, class: "btn btn-primary"  do %>
      <i class="fas fa-plus pr-2"></i>Create listing
    <% end %>

  </div>

  <% if @seller == current_user && @listings.empty? %>
    <p class="py-4"><em>You have 0 listings that require shipping</em></p>
  <% end %>

  <div class="row">
    <%= render @listings %>
  </div>
</div>
