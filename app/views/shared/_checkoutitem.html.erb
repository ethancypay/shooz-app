<div class="border px-5">
  <h2 class="py-3">Order details</h2>
  <table class="table my-3">
    <tbody>
      <tr>
        <th scope="row">Item: </th>
        <td class='text-right'><%= listing.sneaker_model_name %></td>
      </tr>
      <tr>
        <th scope="row">Brand: </th>
        <td class='text-right'><%= listing.brand %></td>
      </tr>
      <tr>
        <th scope="row">Size: </th>
        <td class='text-right'><%= listing.size %></td>
      </tr>
      <tr class='table-primary'>
        <th scope="row">Price </th>
        <td class='text-right'><%= humanized_money_with_symbol(listing.price) %></td>
      </tr>
    </tbody>
  </table>
</div>
